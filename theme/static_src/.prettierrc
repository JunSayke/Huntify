{
  "plugins": ["prettier-plugin-tailwindcss", "prettier-plugin-django"],
  "tabWidth": 4,
  "printWidth": 5000,
  "twigPrintWidth": 5000,
  "twigMultiTags": ["with,endwith"],
  "twigAlwaysBreakObjects": false,
  "twigSingleQuote": false,
  "overrides": [
    {
      "files": ["*.html"],
      "options": {
        "parser": "html"
      }
    },
    {
      "files": ["*.jinja", "*.django", "**/views/**/*.html"],
      "options": {
        "parser": "melody"
      }
    }
  ]
}